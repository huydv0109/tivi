<resources>

    <style name="Theme.Tivi" parent="Theme.AppCompat.NoActionBar">
        <item name="actionBarTheme">@style/ThemeOverlay.Tivi.ActionBar</item>
        <item name="actionBarPopupTheme">@style/ThemeOverlay.Tivi.Popup</item>

        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>

        <item name="statusBarScrim">@color/status_bar_scrim_dark</item>
        <item name="statusBarScrimTranslucent">@color/status_bar_scrim_translucent_dark</item>

        <item name="navigationBackgroundColor">@color/app_bar_background_dark</item>

        <item name="android:colorBackground">@color/window_background_dark</item>
    </style>

    <style name="Theme.Tivi.Light" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="actionBarTheme">@style/ThemeOverlay.Tivi.ActionBar</item>
        <item name="actionBarPopupTheme">@style/ThemeOverlay.Tivi.Popup</item>

        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>

        <item name="statusBarScrim">@color/status_bar_scrim_light</item>
        <item name="statusBarScrimTranslucent">@color/status_bar_scrim_translucent_light</item>

        <item name="navigationBackgroundColor">@color/app_bar_background_light</item>

        <item name="android:colorBackground">@color/window_background_light</item>
    </style>

    <style name="Theme.Tivi.Immerse">
        <item name="android:statusBarColor">@android:color/transparent</item>
    </style>

    <style name="Theme.Tivi.Light.Immerse">
        <item name="android:statusBarColor">@android:color/transparent</item>
    </style>

    <style name="ThemeOverlay.Tivi.ActionBar" parent="ThemeOverlay.AppCompat.ActionBar" />
    <style name="ThemeOverlay.Tivi.Popup" parent="ThemeOverlay.AppCompat" />

</resources>
